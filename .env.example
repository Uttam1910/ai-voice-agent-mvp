# Example environment variables for AI Voice MVP
# Copy this to .env and fill values (DO NOT commit .env)

PORT=3000
BASE_URL=https://your-public-url.example.com

# Twilio
TWILIO_ACCOUNT_SID=your_twilio_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_FROM_NUMBER=+1XXXXXXXXXX

# Google / Gemini
GEMINI_API_KEY=your_gemini_api_key
# If you use a local JSON key, point to it outside the repo and DO NOT commit it.
GOOGLE_APPLICATION_CREDENTIALS=/path/to/your-service-account.json

# WhatsApp (optional)
WHATSAPP_PHONE_NUMBER_ID=1234567890
WHATSAPP_ACCESS_TOKEN=EAAX...your_token...

# MySQL
DB_HOST=127.0.0.1
DB_PORT=3306
DB_USER=root
DB_PASSWORD=
DB_NAME=ai_voice_mvp
